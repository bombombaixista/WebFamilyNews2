@model Kanban.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">✏️ Editar Produto</h2>

<div class="container">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.Id">
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Categoria" class="form-label">Categoria</label>
                        <input asp-for="Categoria" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Fornecedor" class="form-label">Fornecedor</label>
                        <input asp-for="Fornecedor" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Marca" class="form-label">Marca</label>
                        <input asp-for="Marca" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Tamanho" class="form-label">Tamanho</label>
                        <input asp-for="Tamanho" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Cor" class="form-label">Cor</label>
                        <input asp-for="Cor" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Material" class="form-label">Material</label>
                        <input asp-for="Material" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Estoque" class="form-label">Estoque</label>
                        <input asp-for="Estoque" type="number" min="0" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Preco" class="form-label">Preço (R$)</label>
                        <input asp-for="Preco" type="number" step="0.01" min="0" class="form-control" />
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">⬅️ Voltar</a>
                    <button type="submit" class="btn btn-success">💾 Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Você pode adicionar scripts adicionais se precisar validar campos antes do envio
        // Por exemplo, garantir que estoque e preço não sejam negativos
        document.querySelector('form').addEventListener('submit', function (e) {
            const estoque = parseInt(document.getElementById('Estoque').value);
            const preco = parseFloat(document.getElementById('Preco').value);

            if (estoque < 0 || preco < 0) {
                e.preventDefault();
                alert('Estoque e Preço não podem ser negativos!');
            }
        });
    </script>
}
