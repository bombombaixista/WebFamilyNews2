@model Kanban.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<h1>Editar Produto</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Categoria</label>
        <input asp-for="Categoria" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Preço</label>
        <input asp-for="Preco" type="number" step="0.01" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Estoque</label>
        <input asp-for="Estoque" type="number" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Salvar Alterações</button>
    <a class="btn btn-secondary" href="/Produto/Index">Cancelar</a>
</form>
