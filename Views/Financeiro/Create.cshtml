@model Kanban.Models.Transacao

@{
    ViewData["Title"] = "Nova Transação";
}

<h1>Nova Transação</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Tipo</label>
        <select asp-for="Tipo" class="form-select" required>
            <option value="">Selecione</option>
            <option value="Entrada">Entrada</option>
            <option value="Saída">Saída</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Descrição</label>
        <input asp-for="Descricao" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Valor</label>
        <input asp-for="Valor" type="number" step="0.01" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Data</label>
        <input asp-for="Data" type="date" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a class="btn btn-secondary" href="/Kanban/Index">Cancelar</a>
</form>
