@{
    ViewData["Title"] = "Gerenciar Backup";
}

<div class="container mt-4">

    <!-- HEADER / DASHBOARD -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body text-white"
             style="background: linear-gradient(135deg,#6f42c1,#0d6efd);">
            <h4 class="mb-1">💾 Backup do Sistema</h4>
            <small>
                Exporte ou restaure todos os dados do sistema com segurança
            </small>
        </div>
    </div>

    <!-- CARD BACKUP -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-12">

            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-4">

                    <p class="text-muted mb-4">
                        Utilize as opções abaixo para manter seus dados protegidos.
                        Recomendamos realizar backups periódicos.
                    </p>

                    <!-- BOTÕES -->
                    <div class="d-grid gap-3">

                        <!-- EXPORTAR -->
                        <button class="btn btn-success btn-lg"
                                onclick="exportarTudo()">
                            📤 Exportar Backup Completo
                        </button>

                        <!-- IMPORTAR -->
                        <button class="btn btn-danger btn-lg"
                                onclick="document.getElementById('arquivoZip').click()">
                            📥 Importar Backup (ZIP)
                        </button>

                        <input type="file"
                               id="arquivoZip"
                               accept=".zip"
                               hidden
                               onchange="importarTudo(event)" />
                    </div>

                    <!-- ALERTA -->
                    <div class="alert alert-warning mt-4 text-start">
                        <strong>⚠ Atenção:</strong>
                        <ul class="mb-0 ps-3">
                            <li>Importar um backup pode substituir dados atuais.</li>
                            <li>Certifique-se de usar um arquivo válido.</li>
                            <li>Faça um backup antes de restaurar.</li>
                        </ul>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportarTudo() {
            window.location.href = '/Backup/ExportarTudo';
        }

        async function importarTudo(event) {
            const file = event.target.files[0];
            if (!file) return;

            if (!confirm("⚠ Tem certeza que deseja importar este backup? Os dados atuais poderão ser substituídos.")) {
                event.target.value = "";
                return;
            }

            const formData = new FormData();
            formData.append("arquivo", file);

            try {
                const resp = await fetch('/Backup/ImportarTudo', {
                    method: 'POST',
                    body: formData
                });

                if (resp.ok) {
                    alert("✅ Importação concluída com sucesso!");
                    location.reload();
                } else {
                    alert("❌ Falha ao importar o backup.");
                }
            } catch (err) {
                alert("❌ Erro inesperado durante a importação.");
            }
        }
    </script>
}
