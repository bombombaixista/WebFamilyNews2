@{
    ViewData["Title"] = "Gestão de Funcionários";
}

<div class="container mt-4">

    <!-- DASHBOARD / HEADER -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body text-white"
             style="background: linear-gradient(135deg,#0dcaf0,#0d6efd);">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h4 class="mb-1">👥 Funcionários</h4>
                    <small>Gerencie sua equipe</small>
                </div>
                <button class="btn btn-light fw-bold mt-2 mt-md-0"
                        onclick="abrirModal()">
                    ➕ Novo Funcionário
                </button>
            </div>
        </div>
    </div>

    <!-- TABELA -->
    <div class="card shadow-lg border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>#</th>
                            <th>Nome</th>
                            <th>Cargo</th>
                            <th>Email</th>
                            <th>Telefone</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="funcionarios" class="text-center"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- MODAL -->
<div class="modal fade" id="funcionarioModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0">

            <div class="modal-header text-white"
                 style="background: linear-gradient(135deg,#0dcaf0,#0d6efd);">
                <h5 class="modal-title">👤 Funcionário</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-4">
                <input type="hidden" id="funcionarioId" />

                <div class="mb-3">
                    <label class="form-label">Nome</label>
                    <input type="text" id="nome" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Cargo</label>
                    <input type="text" id="cargo" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" id="email" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Telefone</label>
                    <input type="text" id="telefone" class="form-control" />
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button class="btn btn-success" onclick="salvarFuncionario()">💾 Salvar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let modal;

        document.addEventListener("DOMContentLoaded", () => {
            modal = new bootstrap.Modal(document.getElementById("funcionarioModal"));
            carregarFuncionarios();
        });

        async function carregarFuncionarios() {
            const resp = await fetch('/Funcionario/Listar');
            const funcionarios = await resp.json();
            const tbody = document.getElementById("funcionarios");
            tbody.innerHTML = "";

            funcionarios.forEach(f => {
                tbody.innerHTML += `
                <tr>
                    <td>${f.id}</td>
                    <td>${f.nome}</td>
                    <td>${f.cargo}</td>
                    <td>${f.email ?? "-"}</td>
                    <td>${f.telefone ?? "-"}</td>
                    <td>
                        <button class="btn btn-warning btn-sm me-1"
                                onclick="editarFuncionario(${f.id}, '${f.nome}', '${f.cargo}', '${f.email ?? ""}', '${f.telefone ?? ""}')">
                            ✏️
                        </button>
                        <button class="btn btn-danger btn-sm"
                                onclick="apagarFuncionario(${f.id})">
                            🗑️
                        </button>
                    </td>
                </tr>`;
            });
        }

        function abrirModal() {
            document.getElementById("funcionarioId").value = "";
            document.querySelectorAll("#funcionarioModal input").forEach(i => i.value = "");
            modal.show();
        }

        function editarFuncionario(id, nome, cargo, email, telefone) {
            document.getElementById("funcionarioId").value = id;
            document.getElementById("nome").value = nome;
            document.getElementById("cargo").value = cargo;
            document.getElementById("email").value = email;
            document.getElementById("telefone").value = telefone;
            modal.show();
        }

        async function salvarFuncionario() {
            const id = document.getElementById("funcionarioId").value;

            const funcionario = {
                nome: nome.value,
                cargo: cargo.value,
                email: email.value,
                telefone: telefone.value
            };

            const url = id
                ? `/Funcionario/Editar/${id}`
                : `/Funcionario/Adicionar`;

            const method = id ? "PUT" : "POST";

            await fetch(url, {
                method,
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(funcionario)
            });

            modal.hide();
            carregarFuncionarios();
        }

        async function apagarFuncionario(id) {
            if (!confirm("Deseja realmente apagar este funcionário?")) return;
            await fetch(`/Funcionario/Apagar/${id}`, { method: "DELETE" });
            carregarFuncionarios();
        }
    </script>
}
