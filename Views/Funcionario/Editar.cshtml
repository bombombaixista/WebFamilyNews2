@model Kanban.Models.Funcionario

@{
    ViewData["Title"] = "Editar Funcionário";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning text-dark rounded-top-4">
                    <h4 class="mb-0">✏️ Editar Funcionário</h4>
                </div>

                <div class="card-body p-4">
                    <form method="post" action="/Funcionario/Editar">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <!-- DADOS PESSOAIS -->
                        <h6 class="text-primary mb-3">📄 Dados Pessoais</h6>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Nome" class="form-label"></label>
                                <input asp-for="Nome" class="form-control form-control-lg" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CPF" class="form-label"></label>
                                <input asp-for="CPF" class="form-control form-control-lg" readonly />
                            </div>
                        </div>

                        <!-- DADOS PROFISSIONAIS -->
                        <h6 class="text-success mb-3">💼 Dados Profissionais</h6>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Cargo" class="form-label"></label>
                                <input asp-for="Cargo" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Departamento" class="form-label"></label>
                                <input asp-for="Departamento" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DataAdmissao" class="form-label"></label>
                                <input asp-for="DataAdmissao" type="date" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Salario" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="Salario" type="number" step="0.01" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <!-- CONTATO -->
                        <h6 class="text-warning mb-3">📞 Contato</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Telefone" class="form-label"></label>
                                <input asp-for="Telefone" class="form-control" />
                            </div>
                        </div>

                        <!-- BOTÕES -->
                        <div class="d-flex justify-content-end gap-2">
                            <a href="/Funcionario" class="btn btn-outline-secondary btn-lg">
                                ⬅ Voltar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg text-dark">
                                💾 Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #f0f4ff, #f8f9fa);
        }

        .card {
            box-shadow: 0 10px 25px rgba(0,0,0,.15);
            border-radius: 1rem;
        }

        .card-header {
            border-bottom: none;
        }
    </style>
}
